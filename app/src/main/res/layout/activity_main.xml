<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonShowOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="시작" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용한 라이브러리" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mlkitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android ML Kit" />

                <Button
                    android:id="@+id/mlkitLicenseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="라이센스" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/flexboxButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="flexbox-layout" />

                <Button
                    android:id="@+id/flexboxLicenseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="라이센스" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gsonButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gson" />

                <Button
                    android:id="@+id/gsonLicenseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="라이센스" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="데이터 버전: "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataVersionText"
            android:text="Loading..."
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newVersionText"
            android:textColor="@android:color/holo_red_light"
            android:clickable="true"
            />

    </LinearLayout>
</RelativeLayout>